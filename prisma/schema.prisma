generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


// =====================================
enum UserGender {
  male
  female
  other
}
// =====================================


model User {
  id Int @id @default(autoincrement())
  name String
  username String @unique
  email String @unique
  password String
  birth DateTime
  avatar String?
  bio String?
  website String?
  gender UserGender?
  // Relations
  saved SavedPost[]
  posts Post[]
  // Created AT
  createdAt DateTime @default(now())
}

model Post {
  id Int @id @default(autoincrement())
  url String
  caption String?
  like Int @default(0)
  save Int @default(0)
  user User @relation(fields: [userId], references: [id])
  userId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SavedPost {
  id Int @id @default(autoincrement())
  url String
  user User @relation(fields: [userId], references: [id])
  userId Int
}